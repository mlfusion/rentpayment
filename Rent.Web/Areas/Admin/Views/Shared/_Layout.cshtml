<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Setup Section</title>

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/jqueryval")
    
    <link href="~/Scripts/bootstrap_switch/bootstrap-switch.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap_switch/bootstrap-switch.js"></script>
   
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    
    @Scripts.Render("~/bundles/angular")

    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

 
    @RenderSection("scripts", required: false)
</head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Rent Users Tracker", "Index", "User", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Rent Setup", "Index", "Rent", new { area = "Rent" }, null)</li>
                        <li>@Html.ActionLink("Admin Setup", "Index", "User", new { area = "Admin" }, null)</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Logs <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Errors", "Log")">Errors</a></li>
                                <li><a href="@Url.Action("Notices", "Log")">Notices</a></li>
                                <li><a href="@Url.Action("Users", "Log")">Users</a></li>
                            </ul>
                        </li>
                    </ul>

                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - design by beau <a href="http://mlfusion.com">mlfusion.com</a></p>
            </footer>
        </div>

    </body>
</html>