@model Rent.Entities.RentPayment

@{
    ViewBag.Title = "Create Rent Payment";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.User.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Uid, (SelectList)ViewBag.UserList,"--Select User--", new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.Uid, null, new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Payment, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Payment, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.Payment, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.PaymentDate, new { @class = "form-control", type="date" })
                @Html.ValidationMessageFor(model => model.PaymentDate, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 btn-group">
                <div class="[ col-md-5]">
                    <input type="submit" value="Create Payment" class="btn btn-primary" />
            
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger"})
                </div>
            </div>
        </div>
    </div>
}


<script type="text/javascript">
    $(function () {
        $("input[type='date']").datepicker();
    })
</script>
