@using Antlr.Runtime.Misc
@model Rent.Entities.UsersNotification

@{
    ViewBag.Title = "Setup Message Notifications";
}

<h2>@ViewBag.Title</h2>

@Html.Partial("_TempDataPartial")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.HiddenFor(x => x.Uid)
        @Html.HiddenFor(x => x.UserNotificationId)
        @Html.HiddenFor(x => x.Created)
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="btn-group" data-toggle="buttons">
                    @if (Model.Email == null || Model.Email == true)
                    {
                        <label class="btn btn-primary active">
                            @Html.RadioButtonFor(x => x.Email, true) ON
                        </label>
                    }
                    else
                    {
                        <label class="btn btn-primary">
                            @Html.RadioButtonFor(x => x.Email, true) ON
                        </label>
                    }

                    @if (Model.Email == false)
                    {
                        <label class="btn btn-primary active">
                            @Html.RadioButtonFor(x => x.Email, false) OFF
                        </label>
                    }
                    else
                    {
                        <label class="btn btn-primary">
                            @Html.RadioButtonFor(x => x.Email, false) OFF
                        </label>
                    }
                </div>
                @Html.ValidationMessageFor(x => x.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Phone, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="btn-group" data-toggle="buttons">
                    @if (Model.Phone == true)
                    {
                        <label class="btn btn-primary active">
                            @Html.RadioButtonFor(x => x.Phone, true) ON
                        </label>
                    }
                    else
                    {
                        <label class="btn btn-primary">
                            @Html.RadioButtonFor(x => x.Phone, true) ON
                        </label>
                    }

                    @if (Model.Phone == false)
                    {
                        <label class="btn btn-primary active">
                            @Html.RadioButtonFor(x => x.Phone, false) OFF
                        </label>
                    }
                    else
                    {
                        <label class="btn btn-primary">
                            @Html.RadioButtonFor(x => x.Phone, false) OFF
                        </label>
                    }
                </div>
                @Html.ValidationMessageFor(x=> x.Phone)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="btnSubmit" value="Update Notification" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "Rent")" class="btn btn-primary btn-sm">Back to List</a>
</div>

@Html.Partial("_ProgressBarPartial")

<script type="text/javascript">

    $(function () {
        $("#btnSubmit").click(function () {
                $('#loading').modal();
        });
    });

</script>
